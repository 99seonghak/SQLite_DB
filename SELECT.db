/* Read */
SELECT * FROM topics;
/*SELECT * FROM topics WHERE id = 2;*/
/*SELECT * FROM topics WHERE id > 1;*/
/*SELECT * FROM topics WHERE id > 1 and author_name = 'egoing';*/
SELECT id, title FROM topics;
/* *은 모든 토픽을 얘기한다. 그러므로 FROM 이전에 다른 토픽을 적으면 그 해당된 값이 나온다. */
SELECT * FROM topics ORDER BY id DESC; /* 해당된 값을 정렬하고 싶으면 ORDER BY [] DESC - 큰 값부터, ASC - 작은 값부터*/
/* 모든 값을 불러오면 컴퓨터가 다운된다. 일부의 데이터 가져오기 */
SELECT * FROM topics LIMIT 2; /*  이 처럼 LIMIT 2라고 하면 2개만 가지고 온다*/
SELECT * FROM topics LIMIT 0, 2; /* LIMIT 0, 2 0번째부터 2개를 가지고 온다. 0 1*/
SELECT * FROM topics LIMIT 2, 2;